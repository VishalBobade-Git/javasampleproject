pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/VishalBobade-Git/javasampleproject.git'  // Replace with your repo URL
        GIT_BRANCH = 'master'  // The branch you want to clone
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Step to clone the Git repository
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO_URL}"
            }
        }

        stage('Build with Maven') {
            steps {
                // Step to build the project using Maven
                script {
                    // Run Maven on Linux
                    sh 'mvn clean package'
                }
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
